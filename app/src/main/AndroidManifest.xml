<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="goodline.info.boardrider" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="valleyapp.VolleyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BoardRiderActivity"
            android:label="@string/title_activity_board_rider" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".boardNewsActivity"
            android:label="@string/title_activity_board_news"
            android:parentActivityName=".BoardRiderActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="goodline.info.boardrider.BoardRiderActivity" />
        </activity>
    </application>

</manifest>
